<!DOCTYPE html>
<html>
<head>
    <title>Create Food</title>
    <link rel="stylesheet" href="/css/styleCreateFood.css">
    <script>
        function validateForm() {
            let name = document.forms["formUpdateFood"]["name"].value;
            let calories = document.forms["formUpdateFood"]["calories"].value;
            let type = document.forms["formUpdateFood"]["type"].value;
            if (name === "" || calories === "" || type === "") {
                alert("Todos los campos son obligatorios");
                return false;
            }
            if (calories < 1){
                alert("Calorias no validas. Recuerda que las calorias se miden en nÃºmeros.");
                return false;
            }
            return true;
        }
    </script>
</head>
<body>
<header>
    <nav>
        <h2 class="logo"></h2>
        <ul>
            <a href="/ListFoods?nutritionId={{nutritionId}}"><li>VOLVER</li></a>
        </ul>
    </nav>
</header>
<div class="create">
    <div class="blackSpace"></div>
    <div class="boxAtributes">
        <h1>Crea tu propio alimento</h1>
        {{#succesfull}}
            <p>Alimento creado</p>
        {{/succesfull}}
        <form name="formUpdateFood" action="/ListFoods/CreateFood?nutritionId={{nutritionId}}" method="post" onsubmit="return validateForm()">
        <label for="name">Nombre:</label>
        <input type="text" id="name" name="name"><br><br>
        <label for="type">Tipo:</label>
        <input type="text" id="type" name="type"><br><br>
        <label for="calories">Calories:</label>
        <input type="number" id="calories" name="calories"><br><br>
        <input type="submit" value="Agregar Alimento">
        </form>
    </div>
    <div class="blackSpace"></div>
</div>
</body>
</html>